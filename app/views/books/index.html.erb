<h1 class="Category">
<%= params[:category] %>
</h1>
<% if @books.count == 0 %>
	<%= "There are no books currently in this category"%>

<% else %>	
 	<div class="row">

		<% @books.each do |book| %>

		<div class="col-md-3" >
		<%= link_to image_tag(book.book_img.url(:book_index), class: "book"), book_path(book) %>
		</div>
	<% end %>
	
 </div>
<% end %>

 