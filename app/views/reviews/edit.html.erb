<div class="col-md-6 col-md-offset-3">
	<div class="edit-review-form">
	<h2>Edit Review </h2>	
	<%= simple_form_for([@book, @review]) do |f| %>
	<div id="rating-form">
	<label>Rating</label>
	</div>
		<%= f.input :comment %>
		<%= f.button :submit, :class => "btn-custom2" %>
		<% end %>

    </div>
</div>		
		<script>
	$('#rating-form').raty({
		path: '/assets/',
		scoreName: 'review[rating]'
	});
	</script>   

